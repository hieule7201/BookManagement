<h1>Quản lý sách</h1>

<table class="table table-success table-striped">
<thead class="thead-dark">
      <tr>
        <th>Mã HS</th>
        <th>Họ và tên</th>
        <th>Lớp</th>
        <th>Mã sách</th>
        <th>Tên sách</th>
        <th>Tên tác giả</th>
        <th>Tủ sách</th>
        <th>Số BM</th>
        <th>Ngày mượn</th>
        <th>Ngày trả</th>
        <th>Số ngày</th>
        <th>Ghi chú</th>
        <th> </th>
      </tr>
    </thead>
    <tbody>
    <% @bookmanages.each do |bookmanage| %>
    <tr>
      <td><%= bookmanage.student_id %></td>
      <td><%= bookmanage.fullname %></td>
      <td><%= bookmanage.class_name %></td>
      <td><%= bookmanage.book_id %></td>
      <td><%= bookmanage.book_name %></td>
      <td><%= bookmanage.author_name %></td>
      <td><%= bookmanage.source_name %></td>
      <td><%= bookmanage.bm_number %></td>
      <td><%= bookmanage.first_day %></td>
      <td><%= bookmanage.last_day %></td>
      <td><%= bookmanage.day_number %></td>
      <td><%= bookmanage.note %></td>
      <td><%= link_to "Show", bookmanage, class: "btn btn-info" %></td>
    </tr>
<% end %>
    </tbody>
</table>

<%= link_to "Thêm mới", new_bookmanage_path, class: "btn btn-primary" %>
